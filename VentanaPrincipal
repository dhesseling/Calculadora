    private void BigualActionPerformed(java.awt.event.ActionEvent evt) {                                       
        String resultado; 
        
        num2 = PanelResultado.getText();
        
        if(!num2.equals("")){
            resultado = Calcula(num1,num2,signo);
            PanelResultado.setText(resultado);
        }
        
    }                                      

